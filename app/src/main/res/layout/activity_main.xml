<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="firstValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstValue"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="secondValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/secondValue"
            app:layout_constraintStart_toStartOf="@+id/firstValue"
            app:layout_constraintEnd_toEndOf="@+id/firstValue"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputFirstValue"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/inputSecondValue"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/secondValue"
            app:layout_constraintStart_toStartOf="@+id/secondValue"
            app:layout_constraintEnd_toEndOf="@+id/secondValue"
            android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/inputFirstValue"
            app:layout_constraintStart_toStartOf="@+id/firstValue"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/firstValue"
            app:layout_constraintEnd_toEndOf="@+id/firstValue" android:inputType="numberDecimal"/>
    <Button
            android:text="+"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/additionBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/inputSecondValue"
            android:textSize="24sp" android:textStyle="bold"/>
    <Button
            android:text="-"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/subtractionBtn" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/inputSecondValue"
            app:layout_constraintEnd_toEndOf="@+id/inputSecondValue" android:layout_marginEnd="24dp"
            android:textSize="24sp" android:textStyle="bold"/>
    <Button
            android:text="ร"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/multiplicationBtn" app:layout_constraintStart_toStartOf="@+id/additionBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/additionBtn" app:layout_constraintEnd_toEndOf="@+id/additionBtn"
            android:textSize="24sp" android:textStyle="bold"/>
    <Button
            android:text="รท"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/divisionBtn" app:layout_constraintEnd_toEndOf="@+id/subtractionBtn"
            app:layout_constraintStart_toStartOf="@+id/subtractionBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/subtractionBtn" android:textSize="24sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>